<%- include("partials/header"); -%>

  <div class="container">
    <h1>Home</h1>
    <p>
      <%= startingContent %>
    </p>

    <% posts.forEach(function(post){ %>
      <div class="post-preview">
        <h2>
          <%= post.title %>
        </h2>
        <p>
          <%= post.content.substring(0, 100) + " ..." %>
        </p>
        <a href="/posts/<%= post._id %>" class="btn btn-primary">Read More</a>
      </div>
      <% }) %>
  </div>

  <%- include("partials/footer"); -%>